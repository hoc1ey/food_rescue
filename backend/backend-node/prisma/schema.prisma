generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserType {
  DONOR
  BENEFICIARY
}

enum Days {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}

enum DonationStatus {
  AVAILABLE
  ASSIGNED
  DELIVERED
}

model City {
  code String @id @unique
  name String

  locations   Location[]
  foundations Foundation[]
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  firstName String
  lastName  String
  userType  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  donor                Donor?
  beneficiary          Beneficiary?
  notifications        Notification[]
  beneficiaryDonations Donation[]     @relation("BeneficiaryDonations")
}

model Donor {
  id Int @id @default(autoincrement())

  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  locations Location[]
  donations Donation[]
}

model Location {
  id              Int    @id @default(autoincrement())
  name            String
  mainStreet      String
  secondaryStreet String
  reference       String

  donorId Int
  donor   Donor @relation(fields: [donorId], references: [id])

  cityCode  String
  city      City       @relation(fields: [cityCode], references: [code])
  peakHours PeakHour[]
  donations Donation[]
}

model PeakHour {
  id        Int     @id @default(autoincrement())
  day       Days[]
  startTime String
  endTime   String
  note      String? @db.VarChar(100)

  locationId Int
  location   Location @relation(fields: [locationId], references: [id])
}

model Beneficiary {
  id     Int    @id @default(autoincrement())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  foundationId Int        @unique
  foundation   Foundation @relation(fields: [foundationId], references: [id])
}

model Foundation {
  id              Int    @id @default(autoincrement())
  name            String
  mainStreet      String
  secondaryStreet String
  reference       String

  cityCode String
  city     City   @relation(fields: [cityCode], references: [code])

  beneficiary Beneficiary?
}

model Donation {
  id          String         @id @default(uuid())
  productName String
  quantity    Float
  unit        String
  status      DonationStatus @default(AVAILABLE)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  donorConfirmed       Boolean @default(false)
  beneficiaryConfirmed Boolean @default(false)

  donorId Int
  donor   Donor @relation(fields: [donorId], references: [id])

  locationId Int
  location   Location @relation(fields: [locationId], references: [id])

  beneficiaryId String?
  beneficiary   User?   @relation("BeneficiaryDonations", fields: [beneficiaryId], references: [id])

  notifications Notification[]
}

model Notification {
  id        Int      @id @default(autoincrement())
  message   String
  type      String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  donationId String?
  donation   Donation? @relation(fields: [donationId], references: [id])
}
